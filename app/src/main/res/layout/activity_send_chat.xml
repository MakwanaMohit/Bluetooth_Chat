<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- Button occupying 15% of the screen -->
    <EditText
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.09"
        android:hint="Message"
        android:inputType="text" />

    <Button
        android:id="@+id/InsertMessage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.07"
        android:text="Insert Message" />
    <!-- ListView occupying 85% of the screen -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap message to encrypt and slide right to send"
        android:textAlignment="center" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/SendrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9" />


</LinearLayout>